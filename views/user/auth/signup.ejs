<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Active Crop | Sign Up Page</title>
  <link rel="shortcut icon" href="../../../public/asstes/images/logo.jpg" type="image/x-icon">

  <link rel="stylesheet" href="../../../public/styles/userAuthStyle.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">
</head>

<body>

  <div class="alert-box alert-box-hide" id="alert-box">
    <% if (alertMessage) { %>
      <div class="alert alert-<%= alertType %>" id="alert">
        <%= alertMessage %>
      </div>
      <% } %>
  </div>

  <section class="login-form-section">
    <div class="card">
      <img src="../../../public/asstes/images/logo.jpg" class="card-image" alt="logo">
      <div class="card-body">
        <h5 class="card-title text-center">Create Account</h5>

        <form id="signup-form" method="post" >

          <div class="mb-3">
            <label for="firstName" class="form-label lable-text">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstName">
          </div>
          <div class="mb-3">
            <label for="lastName" class="form-label lable-text">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName">
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label lable-text">Email address</label>
            <input type="email" class="form-control" name="userEmail" id="exampleInputEmail1"
              aria-describedby="emailHelp">

          </div>

          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label lable-text">Password</label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1">
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label lable-text"> Confrim Password</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword">
          </div>

          <div class="btn-contianer mb-3">
            <button type="submit" class="btn " >Create Account</button>
          </div>
          <div class=" btn-contianer mb-3 ">
            <a class="link " href="/page/user/loginPage">Already have account</a>
          </div>
        </form>
      </div>
    </div>

  </section>

  <script>
    const alertBox = document.getElementById('alert-box')
    setTimeout(() => {
      alertBox.classList = '';
      alertBox.innerHTML = '';
    }, 3000);

    const redirectUrl = "<%= redirectUrl %>";
    if (redirectUrl && redirectUrl.trim() !== "") {
      setTimeout(() => {
        window.location.href = redirectUrl;
      }, 2000)

    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
</body>

</html>